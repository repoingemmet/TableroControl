@model IEnumerable<INGEMMET.TableroControl.Models.TablaGenerica>

@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    @foreach (var item in Model)
    {
        if (String.IsNullOrEmpty(item.adicional3))
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" onclick="location.href='@Url.Action("LoadReports", "Home", new {type=item.descripcion, key=item.codigo})'" style="cursor:pointer;">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@item.descripcion&nbsp;</h2>
                        @*<h2>@item.descripcion&nbsp;<small>Actualizado hasta el @item.adicional3</small></h2>*@
                        <!--<ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>-->
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <img src="@Url.Content(@item.adicional2)" alt="Petitorios" />
                    </div>
                </div>
            </div>
        }
    }
</div>
